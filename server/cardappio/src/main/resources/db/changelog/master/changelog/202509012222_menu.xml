<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create_table_menu" author="joao.rolo">
        <preConditions onFail="MARK_RAN" onFailMessage="A tabela 'menu' já existe">
            <not>
                <tableExists tableName="menu"/>
            </not>
        </preConditions>
        <createTable tableName="menu">
            <column name="id" type="${uuid}">
                <constraints primaryKey="true" primaryKeyName="pk_menu"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add_new_columns_table_menu" author="lorenzo.berg">
        <preConditions onFail="MARK_RAN" onFailMessage="A tabela 'menu' não existe">
            <tableExists tableName="menu"/>
        </preConditions>

        <addColumn tableName="menu">
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="${boolean}" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="note" type="varchar(255)"/>
            <column name="restaurant_id" type="${uuid}">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="add_constraint_fk_menu_restaurant_id" author="lorenzo.berg">

        <preConditions onFail="MARK_RAN" onFailMessage="A constraint fk_menu_restaurant_id já existe">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_menu_restaurant_id" foreignKeyTableName="menu"/>
            </not>
        </preConditions>

        <addForeignKeyConstraint baseTableName="menu"
                                 baseColumnNames="restaurant_id"
                                 constraintName="fk_menu_restaurant_id"
                                 referencedTableName="restaurant"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>