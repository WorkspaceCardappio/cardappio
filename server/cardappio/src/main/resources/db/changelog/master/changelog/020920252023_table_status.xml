<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create_table_table_status" author="cassia">
        <preConditions onFail="MARK_RAN" onFailMessage="a tabela table_status jÃ¡ existe">
            <not>
                <tableExists tableName="table_status"/>
            </not>
        </preConditions>
        <createTable tableName="table_status">
            <column name="id" type="numeric(10)">
                <constraints primaryKey="true" primaryKeyName="pk_table_status"/>
            </column>
            <column name="code" type="numeric(10)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>