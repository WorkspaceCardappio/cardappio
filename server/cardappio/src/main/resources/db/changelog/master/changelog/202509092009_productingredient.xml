<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="CREATE_TABLE_PRODUCTINGREDIENT" author="yves.morello">

        <preConditions onFail="MARK_RAN" onFailMessage="A tabela PRODUCTINGREDIENT ja foi criada">
            <not>
                <tableExists tableName="PRODUCTINGREDIENT"/>
            </not>
        </preConditions>

        <createTable tableName="PRODUCTINGREDIENT">
            <column name="ID" type="${uuid}">
                <constraints primaryKey="true" primaryKeyName="PK_PRODUCTINGREDIENT"/>
            </column>
            <column name="PRODUCT" type="PRODUCT">
                <constraints nullable="false"/>
            </column>
            <column name="INGREDIENT" type="INGREDIENT">
                <constraints nullable="false"/>
            </column>
            <column name="QUANTITY" type="BIGDECIMAL">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>